		status = "okay";
		interrupts = <0 18 0>, <0 479 0>;

		mif,int_ap2cp_msg = <0>;
		mif,int_ap2cp_status = <2>;
		mif,int_ap2cp_active = <3>;
		mif,int_ap2cp_uart_noti = <15>;

		mif,irq_cp2ap_msg = <0>;
