menuconfig MALI_T72X
	tristate "Mali-T72X support"
	default n
	help
	  Enable this option to build support for the ARM Mali-T72x GPU.

	  To compile this driver as a module, choose M here:
	  this will generate a single module, called mali_kbase.

choice
	prompt "version Configuration"
	depends on MALI_T72X
	default MALI_R9P0
	help
	  Select the gpu support version.

config MALI_R15P0
	depends on MALI_T72X
	bool "r15p0 driver"

config MALI_R9P0
	depends on MALI_T72X
	bool "r9p0 driver"
endchoice

config MALI_R29P0
	depends on MALI_T72X
	bool "r29p0 driver"
endchoice

if MALI_R15P0
source "drivers/gpu/arm/t72x/r15p0/Kconfig"
endif

if MALI_R9P0
source "drivers/gpu/arm/t72x/r9p0/Kconfig"
endif

if MALI_R29P0
source "drivers/gpu/arm/t72x/r29p0/Kconfig"
endif
